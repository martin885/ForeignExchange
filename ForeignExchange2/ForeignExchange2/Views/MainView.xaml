<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ForeignExchange2.Views.MainView"
             BindingContext="{Binding Main,Source={StaticResource Locator}}">
    <ContentPage.Content>
        <StackLayout Padding="20,30,20,10">
            <Label Text="Foreign Exchange"
                   FontSize="Large"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
            <Label Text="Amount:"/>
            <Entry Placeholder="Enter the amount to convert"/>
            <Label Text="Source Rate:"/>
            <Picker Title="Select a source rate"/>
            <Label Text="Target Rate:"/>
            <Picker Title="Select a target rate"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>